# BlendTwin Database Connection
# Copy this file to .env and fill in your actual credentials from OMS_Connections.xlsx
# NEVER commit .env to version control

# === Staging Environment (VPS-BlendTwin-Staging) ===

# Application
APP_URL=https://staging.blendtwin.com
ENVIRONMENT=staging

# Database (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=blendtwin
DB_USER=your_mysql_user
DB_PASSWORD=your_mysql_password
DB_CHARSET=utf8

# SSH Tunnel (only if connecting FROM local machine TO VPS)
# When app runs ON the VPS, use DB_HOST=localhost and ignore SSH vars
# When app runs locally, use SSH tunnel to reach DB on VPS
SSH_HOST=72.60.27.8
SSH_PORT=22
SSH_USER=root
SSH_PASSWORD=your_ssh_password

# Use SSH tunnel? (true when running locally, false when running on VPS)
USE_SSH_TUNNEL=false
